<UserControl x:Class="Tunnel_Next.Controls.NodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="120">

    <UserControl.Resources>
        <!-- Aero风格端口样式 - 增加端口大小和命中区域 -->
        <Style x:Key="PortStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Fill">
                <Setter.Value>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#F0F8FF" Offset="0.3"/>
                        <GradientStop Color="#E0E8F0" Offset="0.7"/>
                        <GradientStop Color="#C0D0E0" Offset="1"/>
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Stroke">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#8090A0" Offset="0"/>
                        <GradientStop Color="#606070" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="StrokeThickness" Value="1.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="IsHitTestVisible" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#40000000"
                                    Direction="315"
                                    ShadowDepth="2"
                                    BlurRadius="4"
                                    Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#80000000"
                                            Direction="315"
                                            ShadowDepth="3"
                                            BlurRadius="6"
                                            Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="StrokeThickness" Value="2"/>
                    <Setter Property="Width" Value="18"/>
                    <Setter Property="Height" Value="18"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Aero风格节点边框样式 -->
        <Style x:Key="NodeBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#80FFFFFF" Offset="0"/>
                        <GradientStop Color="#40FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#20000000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#60000000"
                                      Direction="315"
                                      ShadowDepth="4"
                                      BlurRadius="8"
                                      Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border x:Name="NodeBorder"
            Style="{StaticResource NodeBorderStyle}"
            MinWidth="130"
            MinHeight="85"
            Opacity="0.95">

        <!-- 主背景层 -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{Binding Color, FallbackValue=#4A90E2}" Offset="0"/>
                <GradientStop Color="{Binding Color, FallbackValue=#4A90E2}" Offset="0.4"/>
                <GradientStop Color="#F8FCFF" Offset="0.6"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 高光层 -->
            <Border Grid.RowSpan="3"
                    CornerRadius="8"
                    BorderThickness="0"
                    Opacity="0.4"
                    IsHitTestVisible="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.3">
                        <GradientStop Color="#80FFFFFF" Offset="0"/>
                        <GradientStop Color="#40FFFFFF" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- 节点标题 - Aero风格 -->
            <Border Grid.Row="0"
                    CornerRadius="8,8,0,0"
                    Padding="8,4"
                    Margin="0,0,0,2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#60FFFFFF" Offset="0"/>
                        <GradientStop Color="#30FFFFFF" Offset="0.5"/>
                        <GradientStop Color="#10FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <TextBlock Text="{Binding Title}"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#80000000"
                                          Direction="270"
                                          ShadowDepth="1"
                                          BlurRadius="2"
                                          Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <!-- 节点内容区域 -->
            <Grid Grid.Row="1" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 输入端口 - Aero风格，增加端口间距 -->
                <StackPanel Grid.Column="0"
                            x:Name="InputPortsPanel"
                            VerticalAlignment="Center"
                            Margin="4,8">
                    <!-- 输入端口将在代码中动态添加，通过Margin控制间距 -->
                </StackPanel>

                <!-- 中间内容区域 -->
                <Grid Grid.Column="1" Margin="8,4">
                    <!-- 可以放置节点特定的UI元素 -->
                </Grid>

                <!-- 输出端口 - Aero风格，增加端口间距 -->
                <StackPanel Grid.Column="2"
                            x:Name="OutputPortsPanel"
                            VerticalAlignment="Center"
                            Margin="4,8">
                    <!-- 输出端口将在代码中动态添加，通过Margin控制间距 -->
                </StackPanel>
            </Grid>

            <!-- 状态指示器 - Aero风格 -->
            <Border Grid.Row="2"
                    Height="5"
                    CornerRadius="0,0,8,8"
                    Margin="1,0,1,1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#E0E8F0" Offset="0"/>
                        <GradientStop Color="#C0D0E0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <!-- 根据节点状态显示不同颜色：绿色：已处理，红色：错误，灰色：未处理 -->
            </Border>

            <!-- 选中状态的边框 - Aero风格 -->
            <Border x:Name="SelectionBorder"
                    Grid.RowSpan="3"
                    CornerRadius="10"
                    BorderThickness="2"
                    Visibility="Collapsed"
                    Margin="-2">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFD700" Offset="0"/>
                        <GradientStop Color="#FFA500" Offset="0.5"/>
                        <GradientStop Color="#FF8C00" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect Color="#80FFD700"
                                      Direction="0"
                                      ShadowDepth="0"
                                      BlurRadius="8"
                                      Opacity="0.8"/>
                </Border.Effect>
            </Border>

            <!-- 高亮状态的边框 - Aero风格 -->
            <Border x:Name="HighlightBorder"
                    Grid.RowSpan="3"
                    CornerRadius="10"
                    BorderThickness="2"
                    Visibility="Collapsed"
                    Margin="-2">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#32CD32" Offset="0"/>
                        <GradientStop Color="#50FF50" Offset="0.5"/>
                        <GradientStop Color="#32CD32" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect Color="#8032CD32"
                                      Direction="0"
                                      ShadowDepth="0"
                                      BlurRadius="6"
                                      Opacity="0.7"/>
                </Border.Effect>
            </Border>
        </Grid>
    </Border>
</UserControl>
