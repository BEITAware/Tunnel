<UserControl x:Class="Tunnel_Next.Controls.DocumentTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Tunnel_Next.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- 合并资源字典 -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Tunnel-Next;component/Resources/ScriptsControls/ScriptButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 转换器 -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- 文档Tab样式 -->
            <Style x:Key="DocumentTabItemStyle" TargetType="TabItem">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="{DynamicResource AeroFontFamily}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="border"
                                BorderBrush="#FF000000"
                                BorderThickness="1"
                                CornerRadius="3,3,0,0"
                                Margin="0,0,2,0">
                            <!-- 默认未选中状态背景 -->
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0.499993,0" EndPoint="0.499993,1">
                                    <GradientStop Color="#FF435A69" Offset="0"/>
                                    <GradientStop Color="#FF374D5A" Offset="0.517625"/>
                                    <GradientStop Color="#FE334853" Offset="0.528757"/>
                                    <GradientStop Color="#FF324551" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Tab标题 -->
                                <ContentPresenter x:Name="ContentSite"
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"
                                                ContentSource="Header"
                                                Margin="{TemplateBinding Padding}"/>

                                <!-- 关闭按钮 -->
                                <Button x:Name="CloseButton"
                                        Grid.Column="1"
                                        Width="16" Height="16"
                                        Margin="4,0,4,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Content="×"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Cursor="Hand"
                                        Click="CloseButton_Click"
                                        Visibility="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=Tag, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- 悬停状态 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                          To="#FF5A7085" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                          To="#FF4C6370" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                          To="#FE485E69" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                          To="#FF475B67" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                          To="#FF435A69" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                          To="#FF374D5A" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                          To="#FE334853" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                          To="#FF324551" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- 选中状态 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                          To="#28FFFFFF" Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                          To="#35CEEEFF" Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                          To="#652D4957" Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                          To="#FF6FD4D1" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                          To="#FF435A69" Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                          To="#FF374D5A" Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                          To="#FE334853" Duration="0:0:0.3"/>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                          To="#FF324551" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- 悬停时显示关闭按钮 -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="CloseButton" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏和新建按钮 -->
        <Border Grid.Row="0" Background="{StaticResource PanelHeaderBackgroundBrush}"
                BorderBrush="Transparent" BorderThickness="0" Padding="8,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="文档" FontWeight="Bold"
                           Foreground="White"
                           FontFamily="{StaticResource AeroFontFamily}"
                           FontSize="{StaticResource AeroFontSize}"
                           VerticalAlignment="Center"/>

                <!-- 新建文档按钮 -->
            </Grid>
        </Border>

        <!-- 文档Tab控件 -->
        <TabControl x:Name="DocumentTabs"
                    Grid.Row="1"
                    BorderThickness="0"
                    SelectionChanged="DocumentTabs_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem" BasedOn="{StaticResource DocumentTabItemStyle}"/>
            </TabControl.Resources>
            <TabControl.Background>
                <StaticResource ResourceKey="DocumentTabBackgroundBrush"/>
            </TabControl.Background>

            <!-- 默认空白页面 -->
            <TabItem Header="欢迎" Tag="False">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="pack://application:,,,/Resources/Aurora.png" Stretch="Fill"/>
                    </Grid.Background>

                    <!-- Aero风格半透明背景层 -->
                    <Border>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#B0000000" Offset="0"/>
                                <GradientStop Color="#90000000" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                  Style="{DynamicResource {x:Type ScrollViewer}}"
                                  Padding="30,20,30,20">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" MaxWidth="700">

                            <!-- 标题区域 - Aero风格 -->
                            <Border Margin="0,20,0,30" Padding="20,15" CornerRadius="3">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                                        <GradientStop Color="#20FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#60FFFFFF" Offset="0"/>
                                        <GradientStop Color="#30FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.BorderThickness>1</Border.BorderThickness>

                                <StackPanel HorizontalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                        <TextBlock Text="欢迎使用Tunnel" FontSize="28" FontWeight="Bold"
                                                   FontFamily="{DynamicResource AeroFontFamily}"
                                                   Foreground="White" VerticalAlignment="Center"/>
                                        <Image Source="pack://application:,,,/Resources/TunnelAppLogo.png" Width="40" Height="40"
                                               Margin="12,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Text="预览版本，不建议生产环境使用" FontSize="14" FontStyle="Italic"
                                               FontFamily="{DynamicResource AeroFontFamily}"
                                               Foreground="#E8E8E8" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- 如何开始区域 - GroupBox风格 -->
                            <GroupBox Header="如何开始？" Margin="0,0,0,15" Padding="15,10">
                                <GroupBox.Style>
                                    <Style TargetType="GroupBox" BasedOn="{StaticResource AeroGroupBoxStyle}">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#30FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#15FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                                    </Style>
                                </GroupBox.Style>

                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Image Source="pack://application:,,,/Resources/bootup.png" Width="20" Height="20"
                                               VerticalAlignment="Top" Margin="0,2,8,0"/>
                                        <StackPanel MaxWidth="500">
                                            <TextBlock FontFamily="{DynamicResource AeroFontFamily}" FontSize="12"
                                                       Foreground="#F5F5F5" TextWrapping="Wrap" LineHeight="16">
                                                <Run Text="软件图形界面顶部的标签栏为你提供了丰富的软件功能。在"/>
                                                <Run Text="&quot;文件&quot;" FontWeight="Bold"/>
                                                <Run Text="标签页点选"/>
                                                <Run Text="&quot;新建按钮&quot;" FontWeight="Bold"/>
                                                <InlineUIContainer>
                                                    <Image Source="pack://application:,,,/Resources/NewNodeGraphAlt.png" Width="16" Height="16"
                                                           VerticalAlignment="Center" Margin="4,0"/>
                                                </InlineUIContainer>
                                                <Run Text="来创建一张新的节点图。"/>
                                            </TextBlock>
                                            <TextBlock Text="更多内容请查询随附文档。" FontSize="11"
                                                       FontFamily="{DynamicResource AeroFontFamily}"
                                                       Foreground="#D8D8D8" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>


                            <!-- 关于区域 - GroupBox风格 -->
                            <GroupBox Header="关于" Margin="0,0,0,20" Padding="15,10">
                                <GroupBox.Style>
                                    <Style TargetType="GroupBox" BasedOn="{StaticResource AeroGroupBoxStyle}">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#30FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#15FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                                    </Style>
                                </GroupBox.Style>

                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Image Source="pack://application:,,,/Resources/imgpp.png" Width="20" Height="20"
                                               VerticalAlignment="Top" Margin="0,2,8,0"/>
                                        <StackPanel MaxWidth="500">
                                            <TextBlock Text="本软件以MPL 2.0协议授权。" FontSize="12"
                                                       FontFamily="{DynamicResource AeroFontFamily}"
                                                       Foreground="#F0F0F0" Margin="0,0,0,4" TextWrapping="Wrap"/>
                                            <TextBlock Text="开放源代码软件，按原样提供，不附带任何保证。" FontSize="12"
                                                       FontFamily="{DynamicResource AeroFontFamily}"
                                                       Foreground="#F0F0F0" Margin="0,0,0,8" TextWrapping="Wrap"/>
                                            <TextBlock Text="Copyright © BEITAware"
                                                       FontSize="10" FontStyle="Italic"
                                                       FontFamily="{DynamicResource AeroFontFamily}"
                                                       Foreground="#D0D0D0" TextWrapping="Wrap"/>
                                            <TextBlock Text="欢迎参与本项目，感谢所有贡献者为Tunnel付出的努力。"
                                                       FontSize="10" FontStyle="Italic"
                                                       FontFamily="{DynamicResource AeroFontFamily}"
                                                       Foreground="#D0D0D0" TextWrapping="Wrap" Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <!-- Tunnel使用的开放原代码程序集 -->
                            <GroupBox Header="Tunnel使用的开放原代码程序集" Margin="0,0,0,20" Padding="15,10">
                                <GroupBox.Style>
                                    <Style TargetType="GroupBox" BasedOn="{StaticResource AeroGroupBoxStyle}">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#30FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#15FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#50FFFFFF"/>
                                    </Style>
                                </GroupBox.Style>

                                <StackPanel>
                                    <!-- MathNet.Numerics -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="MathNet.Numerics 5.0.0" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="MIT License" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright (c) 2002-2022 Math.NET Project" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="查看许可证" Width="80" Height="25"
                                                    Margin="8,0,0,0" VerticalAlignment="Center"
                                                    Style="{StaticResource SelectFileScriptButtonStyle}"
                                                    Click="MathNetLicenseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- Microsoft.CodeAnalysis -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Microsoft.CodeAnalysis 4.14.0" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="Apache License 2.0" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright (c) Microsoft Corporation" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="查看许可证" Width="80" Height="25"
                                                    Margin="8,0,0,0" VerticalAlignment="Center"
                                                    Style="{StaticResource SelectFileScriptButtonStyle}"
                                                    Click="MicrosoftCodeAnalysisLicenseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- Microsoft.ML -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Microsoft.ML 4.0.2" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="MIT License" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright (c) Microsoft Corporation" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="查看许可证" Width="80" Height="25"
                                                    Margin="8,0,0,0" VerticalAlignment="Center"
                                                    Style="{StaticResource SelectFileScriptButtonStyle}"
                                                    Click="MicrosoftMLLicenseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- Newtonsoft.Json -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Newtonsoft.Json 13.0.3" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="MIT License" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright (c) James Newton-King" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="查看许可证" Width="80" Height="25"
                                                    Margin="8,0,0,0" VerticalAlignment="Center"
                                                    Style="{StaticResource SelectFileScriptButtonStyle}"
                                                    Click="NewtonsoftJsonLicenseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- OpenCvSharp4 -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="OpenCvSharp4 4.11.0" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="Apache License 2.0" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright 2008 shimat" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="查看许可证" Width="80" Height="25"
                                                    Margin="8,0,0,0" VerticalAlignment="Center"
                                                    Style="{StaticResource SelectFileScriptButtonStyle}"
                                                    Click="OpenCvSharp4LicenseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- Sdcb.LibRaw -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Sdcb.LibRaw 0.21.1.7" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="MIT License (wrapper) / LGPL-2.1 OR CDDL-1.0 (runtime)" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright (c) Zhou Jie" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

                                            <Button Grid.Column="1" Content="查看许可证" Width="80" Height="25"
                                                    Margin="8,0,0,0" VerticalAlignment="Center"
                                                    Style="{StaticResource SelectFileScriptButtonStyle}"
                                                    Click="SdcbLibRawLicenseButton_Click"/>
                                        </Grid>
                                    </Border>

                                    <!-- System.Drawing.Common -->
                                    <Border Margin="0,0,0,8" Padding="8" CornerRadius="2" Background="#20FFFFFF" BorderBrush="#40FFFFFF" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="System.Drawing.Common 8.0.11" FontWeight="Bold" FontSize="11"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#F5F5F5" Margin="0,0,0,2"/>
                                                <TextBlock Text="MIT License" FontSize="10"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#E0E0E0" Margin="0,0,0,2"/>
                                                <TextBlock Text="Copyright (c) .NET Foundation and Contributors" FontSize="9"
                                                           FontFamily="{DynamicResource AeroFontFamily}"
                                                           Foreground="#D0D0D0"/>
                                            </StackPanel>

