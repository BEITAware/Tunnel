<Window x:Class="Tunnel_Next.Windows.BatchProcessResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="批量处理结果" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/BatchProcess.png"
        Background="#FF1A1F28"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ScriptsControls/SharedBrushes.xaml"/>
                <ResourceDictionary Source="/Resources/ScriptsControls/PanelStyles.xaml"/>
                <ResourceDictionary Source="/Resources/ScriptsControls/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Resources/ScriptsControls/ScriptButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="0">
        <DockPanel>
            <!-- 标题栏 -->
            <Border DockPanel.Dock="Top" Margin="0,0,0,5">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1.38187" StartPoint="0.5,-0.381866">
                        <GradientStop Color="#FF2E4A6C" Offset="0.325"/>
                        <GradientStop Color="#FF1D2E54" Offset="0.237"/>
                        <GradientStop Color="#FE070714" Offset="0.325"/>
                        <GradientStop Color="#FF162F67" Offset="0.562"/>
                    </LinearGradientBrush>
                </Border.Background>
                <TextBlock Text="批量处理 - 处理结果" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="{DynamicResource PrimaryForeground}" 
                       Style="{DynamicResource DefaultTextBlockStyle}"
                       Margin="15,10"/>
            </Border>
            
            <!-- 按钮区域 -->
            <Border DockPanel.Dock="Bottom" Padding="10" Margin="10,5,10,10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#20293952" Offset="0"/>
                        <GradientStop Color="#3D1A1F28" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.2" Color="#000000"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CloseButton" Content="关闭" Width="100" Height="30" 
                            Style="{DynamicResource ScriptButtonStyle}"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Border>
            
            <!-- 内容区域 -->
            <Border Margin="10" Style="{DynamicResource DefaultPanelStyle}" CornerRadius="6">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#20293952" Padding="10,8">
                        <TextBlock Text="已处理的节点图文件" FontWeight="Bold" 
                                   Foreground="{DynamicResource PrimaryForeground}"
                                   Style="{DynamicResource DefaultTextBlockStyle}"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="5">
                        <ItemsControl x:Name="SelectedNodesListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="0,3">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <GradientStop Color="#20293952" Offset="0"/>
                                                <GradientStop Color="#40293952" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2" />
                                        </Border.Effect>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- 缩略图 -->
                                            <Border Grid.Column="0" Width="50" Height="50" Margin="0,0,10,0"
                                                    Background="#10FFFFFF" CornerRadius="3">
                                                <Border.Effect>
                                                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3" />
                                                </Border.Effect>
                                                <Image Source="{Binding Thumbnail}" Stretch="Uniform" Margin="2"/>
                                            </Border>
                                            
                                            <!-- 节点图信息 -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                                           Foreground="{DynamicResource PrimaryForeground}"
                                                           Style="{DynamicResource DefaultTextBlockStyle}"/>
                                                <TextBlock Text="{Binding FilePath}" TextWrapping="Wrap" 
                                                           Foreground="{DynamicResource SecondaryForeground}" 
                                                           FontSize="12" Margin="0,5,0,0"
                                                           Style="{DynamicResource DefaultTextBlockStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </DockPanel>
    </Border>
</Window> 