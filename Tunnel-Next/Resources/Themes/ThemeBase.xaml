<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 颜色变量 - 基于Windows Aero设计风格 -->
    <Color x:Key="AeroBorderColor">#FF1A1F28</Color>
    <Color x:Key="AeroGlassStart">#1A1F28</Color>
    <Color x:Key="AeroGlassMiddle">#1A1F28</Color>
    <Color x:Key="AeroGlassEnd">#1A1F28</Color>
    <Color x:Key="AeroHighlightColor">#FF0078D7</Color>
    <Color x:Key="AeroHoverStartColor">#FF1A1F28</Color>
    <Color x:Key="AeroHoverEndColor">#FF1A1F28</Color>
    <Color x:Key="AeroPressedStartColor">#FF1A1F28</Color>
    <Color x:Key="AeroPressedEndColor">#FF1A1F28</Color>
    <Color x:Key="AeroBackgroundColor">#FF1A1F28</Color>
    <Color x:Key="AeroTextColor">#FF2E5C8A</Color>
    <Color x:Key="AeroDisabledTextColor">#FF777777</Color>
    <Color x:Key="AeroDisabledBgColor">#FFE8E8E8</Color>
    
    <!-- 字体设置 -->
    <FontFamily x:Key="AeroFontFamily">Segoe UI, Microsoft YaHei UI, Arial</FontFamily>
    <system:Double x:Key="AeroFontSize" xmlns:system="clr-namespace:System;assembly=System.Runtime">11</system:Double>
    <system:Double x:Key="AeroSmallFontSize" xmlns:system="clr-namespace:System;assembly=System.Runtime">10</system:Double>
    <system:Double x:Key="AeroLargeFontSize" xmlns:system="clr-namespace:System;assembly=System.Runtime">12</system:Double>
    
    <!-- 尺寸变量 -->
    <Thickness x:Key="StandardPadding">6,4</Thickness>
    <Thickness x:Key="ButtonPadding">6,4</Thickness>
    <Thickness x:Key="ControlBorderThickness">1</Thickness>
    <CornerRadius x:Key="StandardCornerRadius">3</CornerRadius>
    
    <!-- 通用画笔 -->
    <SolidColorBrush x:Key="AeroBorderBrush" Color="{DynamicResource AeroBorderColor}"/>
    <SolidColorBrush x:Key="AeroHighlightBrush" Color="{DynamicResource AeroHighlightColor}"/>
    <LinearGradientBrush x:Key="AeroBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FF18202B" Offset="0"/>
        <GradientStop Color="#FF0A0E16" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="AeroForegroundBrush" Color="{DynamicResource AeroTextColor}"/>
    <SolidColorBrush x:Key="AeroDisabledForegroundBrush" Color="{DynamicResource AeroDisabledTextColor}"/>
    <SolidColorBrush x:Key="AeroDisabledBackgroundBrush" Color="{DynamicResource AeroDisabledBgColor}"/>
    
    <!-- 渐变画笔 -->
    <LinearGradientBrush x:Key="AeroGlassBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource AeroGlassStart}" Offset="0"/>
        <GradientStop Color="{DynamicResource AeroGlassMiddle}" Offset="0.5"/>
        <GradientStop Color="{DynamicResource AeroGlassEnd}" Offset="1"/>
    </LinearGradientBrush>

    <!-- 新的工具栏背景画笔 - 基于designs/toolbar.xaml -->
    <LinearGradientBrush x:Key="ToolbarBackgroundBrush" StartPoint="0.5,-0.381866" EndPoint="0.5,1.38187">
        <GradientStop Color="#FF3E5E85" Offset="0"/>
        <GradientStop Color="#FF1D2E54" Offset="0.480519"/>
        <GradientStop Color="#FE000004" Offset="0.487941"/>
        <GradientStop Color="#FF385EB2" Offset="1"/>
    </LinearGradientBrush>

    <!-- 面板标题栏背景画笔 - 基于designs/interfacepanelbar.xaml -->
    <LinearGradientBrush x:Key="PanelHeaderBackgroundBrush" StartPoint="0.499999,0" EndPoint="0.499999,1">
        <GradientStop Color="#FF1A1F28" Offset="0"/>
        <GradientStop Color="#FF1C2432" Offset="0.510204"/>
        <GradientStop Color="#FE1C2533" Offset="0.562152"/>
        <GradientStop Color="#FE30445F" Offset="0.87013"/>
        <GradientStop Color="#FE384F6C" Offset="0.918367"/>
        <GradientStop Color="#FF405671" Offset="0.974026"/>
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="DocumentTabBackgroundBrush">
        <GradientStop Color="#FF040912" Offset="1"/>
        <GradientStop Color="#FF1E242E" Offset="0.387"/>
    </RadialGradientBrush>
    
    <LinearGradientBrush x:Key="AeroHoverBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource AeroHoverStartColor}" Offset="0"/>
        <GradientStop Color="{DynamicResource AeroHoverEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AeroPressedBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource AeroPressedStartColor}" Offset="0"/>
        <GradientStop Color="{DynamicResource AeroPressedEndColor}" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Ribbon内容区域背景画笔 - 基于designs/RibbonContentBackgroundV3.xaml -->
    <LinearGradientBrush x:Key="RibbonContentBackgroundBrush" StartPoint="0.5,-0.381867" EndPoint="0.5,1.38187">
        <GradientStop Color="#FF6A94C5" Offset="0"/>
        <GradientStop Color="#FF4679B3" Offset="0.0871985"/>
        <GradientStop Color="#FF052C63" Offset="0.410019"/>
        <GradientStop Color="#FE03133E" Offset="0.576994"/>
        <GradientStop Color="#FF000B2D" Offset="0.706865"/>
    </LinearGradientBrush>
    
    <!-- Ribbon内容区域遮罩画笔 - 基于designs/RibbonContentBackgroundV3CoverMask.xaml -->
    <LinearGradientBrush x:Key="RibbonContentCoverMaskBrush" StartPoint="-6.56999e-008,0.500001" EndPoint="1,0.500001">
        <GradientStop Color="#3B6A94C5" Offset="0"/>
        <GradientStop Color="#264679B3" Offset="0.0871985"/>
        <GradientStop Color="#3C052C63" Offset="0.317254"/>
        <GradientStop Color="#5203133E" Offset="0.576994"/>
        <GradientStop Color="#C5000B2D" Offset="0.862709"/>
    </LinearGradientBrush>
    
    <!-- 参数面板标题栏背景 - 来自designs/ParameterControlTitleBanner.xaml -->
    <RadialGradientBrush x:Key="ParameterPanelHeaderBrush" 
                         RadiusX="2.15218" RadiusY="1.68352" 
                         Center="0.499962,-0.057919" 
                         GradientOrigin="0.499962,-0.057919">
        <RadialGradientBrush.GradientStops>
            <GradientStop Color="#BA2D72A0" Offset="0"/>
            <GradientStop Color="#00000004" Offset="0.506494"/>
            <GradientStop Color="#00FFFFFF" Offset="0.517625"/>
            <GradientStop Color="#3FFFFFFF" Offset="0.821892"/>
            <GradientStop Color="#4AFFFFFF" Offset="0.892393"/>
        </RadialGradientBrush.GradientStops>
    </RadialGradientBrush>
    
    <!-- 参数面板标题栏样式 - 完整样式，基于设计文件，无边框无圆角 -->
    <Style x:Key="AeroParameterPanelHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ParameterPanelHeaderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="38"/>
    </Style>
    
    <!-- 参数面板标题文字样式 - 匹配设计文件 -->
    <Style x:Key="AeroParameterPanelHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontFamily" Value="{DynamicResource AeroFontFamily}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Foreground" Value="#FFFAFAFA"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FF002244" Direction="320" ShadowDepth="1" BlurRadius="1" Opacity="0.8"/>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- 参数面板描述文字样式 - 匹配设计文件 -->
    <Style x:Key="AeroParameterPanelDescriptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="#FFE8F4FF"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FF001122" Direction="320" ShadowDepth="1" BlurRadius="1" Opacity="0.65"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary> 