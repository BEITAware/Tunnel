<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="ButtonHoverBrush" StartPoint="0.5,-0.668" EndPoint="0.5,1.668">
        <GradientStop Color="#00FFFFFF" Offset="0"/>
        <GradientStop Color="#1AFFFFFF" Offset="0.135"/>
        <GradientStop Color="#17FFFFFF" Offset="0.488"/>
        <GradientStop Color="#00000004" Offset="0.518"/>
        <GradientStop Color="#FF1F8EAD" Offset="0.729"/>
    </LinearGradientBrush>

    <Style x:Key="ScriptButtonHoverStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
    </Style>
</ResourceDictionary>
