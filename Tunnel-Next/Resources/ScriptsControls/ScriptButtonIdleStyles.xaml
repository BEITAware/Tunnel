<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<RadialGradientBrush x:Key="ButtonIdleBrush" RadiusX="2.152" RadiusY="1.684" Center="0.5,0.993" GradientOrigin="0.5,0.993">
		<GradientStop Color="#29FFFFFF" Offset="0"/>
		<GradientStop Color="#00000004" Offset="0.38"/>
		<GradientStop Color="#00FFFFFF" Offset="0.417"/>
		<GradientStop Color="#5EFFFFFF" Offset="0.77"/>
		<GradientStop Color="#4AFFFFFF" Offset="0.892"/>
	</RadialGradientBrush>

	<Style x:Key="ScriptButtonIdleStyle" TargetType="Button">
		<Setter Property="Background" Value="{StaticResource ButtonIdleBrush}"/>
	</Style>
</ResourceDictionary>
