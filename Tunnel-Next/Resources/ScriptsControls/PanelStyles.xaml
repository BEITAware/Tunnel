<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="MainPanelBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#FF1A1F28" Offset="0"/>
        <GradientStop Color="#FF1C2432" Offset="0.51"/>
        <GradientStop Color="#FE1C2533" Offset="0.56"/>
        <GradientStop Color="#FE30445F" Offset="0.87"/>
        <GradientStop Color="#FE384F6C" Offset="0.92"/>
        <GradientStop Color="#FF405671" Offset="0.97"/>
    </LinearGradientBrush>

    <Style x:Key="MainPanelStyle" TargetType="StackPanel">
        <Setter Property="Background" Value="{StaticResource MainPanelBackground}"/>
    </Style>

</ResourceDictionary> 